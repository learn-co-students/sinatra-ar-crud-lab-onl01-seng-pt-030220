<form action="/articles/<%= @article.id %>" method="POST">
  <input id="hidden" type="hidden" name="_method" value="patch">
  <h1><%= @article.name %></h1>
  <p><%=@article.content %></p>
  <p>Name: <input id="name" type="text" name="edit_article[name]"></p>
  <p>Content: <input id="content" type="text" name="edit_article[content]"></p>
  <input type="submit" value="submit">
</form>