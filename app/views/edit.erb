<form action="/articles/<%= @article.id %>" method="post">
  <input id="hidden" type="hidden" name="_method" value="PATCH">
  <h3> Title:</h3> <input type="text" name="title" placeholder=<%=@article.title%>>
  <h3> Content:</h3> <input id="id" type="textarea" name="content" placeholder=<%=@article.content%>>
  <input type="submit">
</form>